<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004b6a"
    android:orientation="vertical">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/logo"
                    android:background="#ddd"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />

                <TextView
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_margin="10dp"
                    android:text="كتاب الطريق الى النجاح"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="للدكتور والمحاضر ابراهيم الفقي"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:text="- بسم الله  \n -الرحمن الرحيم \n - سبحان الله"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:text="مبرمج التطبيق"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Abboudi Aliwi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="#f6621f"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:onClick="onClick1"
                    android:id="@+id/but1"
                    android:text="اقتراح للمبرمج"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:onClick="onClick1"
                    android:id="@+id/but2"
                    android:text="المزيد من التطبيقات"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:onClick="onClick1"
                    android:id="@+id/but3"
                    android:text="زيارة موقعنا"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>